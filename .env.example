# ========================================
# AZURE SPEECH SERVICE (Required for Speech-to-Video)
# ========================================
# Get these from Azure Portal > Your Speech Service > Keys and Endpoint
NEXT_PUBLIC_AZURE_SPEECH_KEY=your_azure_speech_key_here
NEXT_PUBLIC_AZURE_SPEECH_REGION=your_azure_region_here # e.g., westus2, eastus, westeurope

# ========================================
# OPENAI API (Required for GPT processing)
# ========================================
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# SUPABASE (Database and Authentication)
# ========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# REDIS (Optional - for caching and rate limiting)
# ========================================
REDIS_URL=your_redis_url_here # e.g., redis://localhost:6379

# ========================================
# ANALYTICS (Optional)
# ========================================
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# ========================================
# DEVELOPMENT SETTINGS (Optional)
# ========================================
NEXT_PUBLIC_DEBUG_AVATAR=false # Set to true to enable debug logging